<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/btn_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/item_selector1"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:text="progressBar的loading样式"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_show1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@drawable/item_selector5"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        app:layout_constraintStart_toEndOf="@+id/btn_progress_bar"
        app:layout_constraintTop_toTopOf="@+id/btn_progress_bar" />

    <TextView
        android:id="@+id/tv_hide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hide"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@drawable/item_selector7"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        app:layout_constraintStart_toEndOf="@+id/tv_show1"
        app:layout_constraintTop_toTopOf="@+id/btn_progress_bar" />

    <TextView
        android:id="@+id/btn_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/item_selector1"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:text="fragment的loading样式"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_progress_bar" />

    <TextView
        android:id="@+id/tv_show2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@drawable/item_selector5"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        app:layout_constraintStart_toEndOf="@+id/btn_fragment"
        app:layout_constraintTop_toTopOf="@+id/btn_fragment" />

    <TextView
        android:id="@+id/tv_hide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hide"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@drawable/item_selector7"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        app:layout_constraintStart_toEndOf="@+id/tv_show2"
        app:layout_constraintTop_toTopOf="@+id/btn_fragment" />

</android.support.constraint.ConstraintLayout>