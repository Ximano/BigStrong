<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <solid android:color="#00000000" /> <!-- 定义填充的颜色值 -->

    <stroke
        android:width="1dp"
        android:color="@color/border_grid_view" /> <!-- 定义描边的宽度和描边的颜色值 -->

    <corners
        android:bottomLeftRadius="1dp"
        android:bottomRightRadius="1dp"
        android:topLeftRadius="1dp"
        android:topRightRadius="1dp" /> <!-- 设置四个角的半径 -->

    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="0dp" /> <!-- 设置各个方向的间隔 -->

</shape>